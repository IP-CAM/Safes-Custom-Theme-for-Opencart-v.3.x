<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% if description %}
  <meta name="description" content="{{ description }}" />
  {% endif %}
  <title>{{ title }}</title>
  <base href="{{ base }}" />
  {% for style in styles %}
  <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
  {% endfor %}
  {% for script in scripts %}
  <script src="{{ script }}"></script>
  {% endfor %}
  {% for link in links %}
  <link rel="{{ link.rel }}" href="{{ link.href }}" />
  {% endfor %}
  <link rel="icon" type="image/png" href="catalog/view/theme/THEME_SLUG/image/favicon/16.png" sizes="16x16">
  <link rel="icon" type="image/png" href="catalog/view/theme/THEME_SLUG/image/favicon/32.png" sizes="32x32">
  <link rel="apple-touch-icon" href="catalog/view/theme/THEME_SLUG/image/favicon/180.png" sizes="180x180">
  <script>(function(w,d,u){w.readyQ=[];w.bindReadyQ=[];function p(x,y){if(x=="ready"){w.bindReadyQ.push(y);}else{w.readyQ.push(x);}};var a={ready:p,bind:p};w.$=w.jQuery=function(f){if(f===d||f===u){return a}else{p(f)}}})(window,document)</script>
</head>
<body>

<div class="page">
  <div class="page__header">
    <div class="wrapper">
      <header class="header">
        <div class="header__first-line">
          <nav class="header__information information-links">
            <ul class="top-navigation-menu link-group link-group_direction_row">
            {% for link in top_navigation_links %}
              <li class="link-group__item">
                <a
                  class="information-links__item link link_theme_ghost"
                  href="{{ link.url }}"
                  target="{{ link.target }}"
                  {{ link.attributes }}
                >
                  {{ link.text }}
                </a>
              </li>
            {% endfor %}
            </ul>
          </nav>
          <div class="header__contacts">
            <a
              class="link link_theme_standard"
              href="tel:{{ telephone|replace({'-':"",'(':"",')':"",' ':""}) }}"
            >
              {{ telephone }}
            </a>
          </div>
        </div>
        <div class="header__second-line">
          <a
            class="header__logotype"
            href="{{ home }}"
          >
            {% if logo %}
            <img
              src="{{ logo }}"
              title="{{ name }}"
              alt="{{ name }}"
            />
            {% else %}
              {{ name }}
            {% endif %}
          </a>
          <div class="header__menu-button">
            <button type="button" class="menu-button">
              <span class="menu-button__burger-icon">
                <span class="menu-button__burger-line"></span>
              </span>
              <span class="menu-button__text">
                Каталог
              </span>
            </button>
          </div>
          <div class="header__search">
            {{ search }}
          </div>
          <ul class="nav header__account">
            {% if logged %}
            <li class="nav__item">
              <a
                href="{{ account }}"
                class="link link_theme_standard"
              >
                {{ text_account }}
              </a>
            </li>
            <li class="nav__item">
              <a
                href="{{ logout }}"
                class="link  link_theme_standard"
              >
                {{ text_logout }}
              </a>
            </li>
            {% else %}
            <li class="nav__item">
              <a
                class="login-dialog-link link link_theme_standard"
                href={{ login }}
              >
                {{ text_login }}
              </a>
            </li>
            {% endif %}
          </ul>
          <div class="header__cart">
            {{ cart }}
          </div>
        </div>
      </header>
      {{ menu }}
    </div>
  </div>
