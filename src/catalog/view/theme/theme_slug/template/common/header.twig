<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% if description %}
  <meta name="description" content="{{ description }}" />
  {% endif %}
  <title>{{ title }}</title>
  <base href="{{ base }}" />
  {% for style in styles %}
  <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
  {% endfor %}
  {% for link in links %}
  <link rel="{{ link.rel }}" href="{{ link.href }}" />
  {% endfor %}
  <link rel="icon" type="image/png" href="catalog/view/theme/THEME_SLUG/image/favicon/16.png" sizes="16x16">
  <link rel="icon" type="image/png" href="catalog/view/theme/THEME_SLUG/image/favicon/32.png" sizes="32x32">
  <link rel="apple-touch-icon" href="catalog/view/theme/THEME_SLUG/image/favicon/180.png" sizes="180x180">
  <script>(function(w,d,u){w.readyQ=[];w.bindReadyQ=[];function p(x,y){if(x=="ready"){w.bindReadyQ.push(y);}else{w.readyQ.push(x);}};var a={ready:p,bind:p};w.$=w.jQuery=function(f){if(f===d||f===u){return a}else{p(f)}}})(window,document)</script>
</head>
<body>

<div
  class="mobile-menu-modal modal modal_position_left modal_no-backdrop"
  role="dialog"
  tabindex="-1"
  aria-modal="true"
>
  <div class="mobile-menu modal__window">
    <div class="mobile-menu__section">
      <button class="mobile-menu__close icon-button icon-button_size_l">
        <svg
          class="icon-button__icon"
          focusable="false"
          aria-hidden="true"
        >
          <use xlink:href="#icon-close"/>
        </svg>
        <span class="icon-button__text">
          Закрыть
        </span>
      </button>
    </div>
    <div class="mobile-menu__section">
      <form class="mobile-search">
        <label for="mobile-search">
          <input
            id="mobile-search"
            class="text-field"
            type="text"
            placeholder="Поиск"
          />
        </label>
      </form>
    </div>
    <ul class="mobile-menu__items">
      {% if logged %}
      <li class="mobile-menu__item">
        <a
          href="{{ account }}"
          class="mobile-menu__link"
        >
          {{ text_account }}
        </a>
      </li>
      <li class="mobile-menu__item">
        <a
          href="{{ logout }}"
          class="mobile-menu__link"
        >
          {{ text_logout }}
        </a>
      </li>
      {% else %}
      <li class="mobile-menu__item">
        <a
          href="{{ login }}"
          class="mobile-menu__link"
        >
          {{ text_login }}
        </a>
      </li>
      {% endif %}
      {% for link in top_navigation_links %}
      <li class="mobile-menu__item">
        <a
          href="{{ link.url }}"
          class="mobile-menu__link"
          target="{{ link.target }}"
          {{ link.attributes }}
        >
          {{ link.text }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>

<div class="page">
  <div class="page__header">
    <div class="wrapper">
      <header class="header">
        <div class="header__first-line">
          <nav class="header__information information-links">
            <ul class="top-navigation-menu link-group link-group_direction_row">
            {% for link in top_navigation_links %}
              <li class="link-group__item">
                <a
                  class="information-links__item link link_theme_ghost"
                  href="{{ link.url }}"
                  target="{{ link.target }}"
                  {{ link.attributes }}
                >
                  {{ link.text }}
                </a>
              </li>
            {% endfor %}
            </ul>
          </nav>
          <div class="header__contacts">
            <a
              class="link"
              href="tel:{{ telephone|replace({'-':"",'(':"",')':"",' ':""}) }}"
            >
              {{ telephone }}
            </a>
          </div>
        </div>
        <div class="header__second-line">
          <div class="header__burger">
            <button
              class="mobile-menu-button icon-button icon-button_size_m"
              type="button"
            >
              <svg
                class="icon-button__icon"
                focusable="false"
                aria-hidden="true"
              >
                <use xlink:href="#icon-catalog"/>
              </svg>
              <span class="icon-button__text">
                Меню
              </span>
            </button>
          </div>
          <a
            class="header__logotype"
            href="{{ home }}"
          >
            {% if logo %}
            <img
              src="{{ logo }}"
              title="{{ name }}"
              alt="{{ name }}"
            />
            {% else %}
              {{ name }}
            {% endif %}
          </a>
          <div class="header__catalog">
            <button type="button" class="catalog-button">
              <span class="catalog-button__addon">
                <svg
                  class="button__icon"
                  focusable="false"
                  aria-hidden="true"
                >
                  <use xlink:href="#icon-catalog"/>
                </svg>
              </span>
              <span class="catalog-button__text">
                Каталог
              </span>
            </button>
          </div>
          <div class="header__search">
            {{ search }}
          </div>
          <ul class="nav header__account">
            {% if logged %}
            <li class="nav__item">
              <a
                href="{{ account }}"
                class="link"
              >
                {{ text_account }}
              </a>
            </li>
            <li class="nav__item">
              <a
                href="{{ logout }}"
                class="link"
              >
                {{ text_logout }}
              </a>
            </li>
            {% else %}
            <li class="nav__item">
              <a
                class="login-dialog-link link"
                href={{ login }}
              >
                {{ text_login }}
              </a>
            </li>
            {% endif %}
          </ul>
          <div class="header__cart">
            {{ cart }}
          </div>
        </div>
      </header>
    </div>
  </div>
