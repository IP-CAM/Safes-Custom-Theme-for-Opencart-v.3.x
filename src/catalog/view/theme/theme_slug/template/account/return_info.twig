{{ header }}
<div class="l-container l-container_padding">
<div class="grid">
{% if column_left %}
<div class="grid__col grid__col--1-of-4">
{{ column_left }}
</div>
{% endif %}
{% if column_left and column_right %}
{% set class = 'grid__col--2-of-4' %}
{% elseif column_left or column_right %}
{% set class = 'grid__col--3-of-4' %}
{% else %}
{% set class = 'grid__col--4-of-4' %}
{% endif %}
<div class="grid__col {{ class }}">
<ul class="breadcrumbs h-center">
{% for breadcrumb in breadcrumbs %}
<li class="breadcrumbs__item"><a href="{{ breadcrumb.href }}" class="link link_breadcrumbs">{{ breadcrumb.text }}</a></li>
{% endfor %}
</ul>
{{ content_top }}
<div class="ui__form">
<h1>{{ heading_title }}</h1>
<table class="table">
<thead>
  <tr>
    <td colspan="2">{{ text_return_detail }}</td>
  </tr>
</thead>
<tbody>
  <tr>
    <td><b>{{ text_return_id }}</b> {{ return_id }}<br />
      <b>{{ text_date_added }}</b> {{ date_added }}</td>
    <td><b>{{ text_order_id }}</b> {{ order_id }}<br />
      <b>{{ text_date_ordered }}</b> {{ date_ordered }}</td>
  </tr>
</tbody>
</table>
<h3>{{ text_product }}</h3>
<table class="table">
  <thead>
    <tr>
      <td>{{ column_product }}</td>
      <td>{{ column_model }}</td>
      <td>{{ column_quantity }}</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{ product }}</td>
      <td>{{ model }}</td>
      <td>{{ quantity }}</td>
    </tr>
  </tbody>
</table>
<h3>{{ text_reason }}</h3>
<table class="table">
  <thead>
    <tr>
      <td>{{ column_reason }}</td>
      <td>{{ column_opened }}</td>
      <td>{{ column_action }}</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{ reason }}</td>
      <td>{{ opened }}</td>
      <td>{{ action }}</td>
    </tr>
  </tbody>
</table>
{% if comment %}
<h3>{{ text_comment }}</h3>
<table class="table">
  <tbody>
    <tr>
      <td>{{ comment }}</td>
    </tr>
  </tbody>
</table>
{% endif %}
<h3>{{ text_history }}</h3>
<table class="table">
  <thead>
    <tr>
      <td>{{ column_date_added }}</td>
      <td>{{ column_status }}</td>
      <td>{{ column_comment }}</td>
    </tr>
  </thead>
  <tbody>
  {% if histories %}
  {% for history in histories %}
  <tr>
    <td>{{ history.date_added }}</td>
    <td>{{ history.status }}</td>
    <td>{{ history.comment }}</td>
  </tr>
  {% endfor %}
  {% else %}
  <tr>
    <td colspan="3">{{ text_no_results }}</td>
  </tr>
  {% endif %}
    </tbody>
</table>
<div class="ui__buttons ui__buttons_al">
  <a href="{{ continue }}" class="button button_theme_pseudo">&larr;&nbsp;Назад</a>
</div>
</div>
{{ content_bottom }}
</div>
{% if column_right %}
<div class="grid__col grid__col--1-of-4">
{{ column_right }}
</div>
{% endif %}
</div>
</div>
{{ footer }}
