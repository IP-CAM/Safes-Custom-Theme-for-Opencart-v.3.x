{{ header }}
<div class="l-container l-container_padding">
<div class="grid">
{% if column_left %}
<div class="grid__col grid__col--1-of-4">
{{ column_left }}
</div>
{% endif %}
{% if column_left and column_right %}
{% set class = 'grid__col--2-of-4' %}
{% elseif column_left or column_right %}
{% set class = 'grid__col--3-of-4' %}
{% else %}
{% set class = 'grid__col--4-of-4' %}
{% endif %}
<div class="grid__col {{ class }}">
<ul class="breadcrumbs">
{% for breadcrumb in breadcrumbs %}
<li class="breadcrumbs__item"><a href="{{ breadcrumb.href }}" class="link link_breadcrumbs">{{ breadcrumb.text }}</a></li>
{% endfor %}
</ul>
{% if success %}
<div class="ui__message">{{ success }}</div>
{% endif %}
{% if error_warning %}
<div class="alert ui__message_error">{{ error_warning }}</div>
{% endif %}
{{ content_top }}
  <h2>{{ text_address_book }}</h2>
  {% if addresses %}
  {% for result in addresses %}
  <div class="ui__group">
    <span>{{ result.address }}</span>
    <a href="{{ result.update }}" class="link">{{ button_edit }}</a>
    <div style="flex-grow: 1; text-align: right">
      <a href="{{ result.delete }}">
        <svg class="remove"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#i-remove"></use></svg>
      </a>
    </div>
  </div>
  {% endfor %}
  {% else %}
  {{ text_empty }}
  {% endif %}
  <div class="ui__buttons ui__buttons_al">
    <a href="{{ back }}" class="button button_view_pseudo">&larr;&nbsp;{{ button_back }}</a>
    <a href="{{ add }}" class="button">{{ button_new_address }}</a>
  </div>
{{ content_bottom }}
</div>
{% if column_right %}
<div class="grid__col grid__col--1-of-4">
{{ column_right }}
</div>
{% endif %}
</div>
</div>
<div class="l-container">
</div>
{{ footer }}
