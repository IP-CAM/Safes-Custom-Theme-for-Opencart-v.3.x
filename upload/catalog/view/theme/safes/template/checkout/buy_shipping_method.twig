{% if error_warning %}
<div class="ui__message ui__message_error">{{ error_warning }}</div>
{% endif %}
{% if shipping_methods %}
{# text_shipping_method #}
{% for shipping_method in shipping_methods %}
{% if not shipping_method.error %}
{% for quote in shipping_method.quote %}
<div class="checkout__shipping">
  <label>
    {% if quote.code == code or not code %}
    <?php $code = $quote['code']; ?>
    <input type="radio" name="shipping_method" value="{{ quote.code }}" checked="checked" data-cost="{{ quote.cost }}" />
    {% else %}
    <input type="radio" name="shipping_method" value="{{ quote.code }}" data-cost="{{ quote.cost }}" />
    {% endif %}
    {{ quote.title }}: {{ quote.text }}
  </label>
</div>
{% endfor %}
{% else %}
<div class="ui__message ui__message_error">{{ shipping_method.error }}</div>
{% endif %}
{% endfor %}
{% endif %}
<script type="text/javascript">
    $('input[name=\'shipping_method\'').change(function(){
        selectShipping();
    });
</script>