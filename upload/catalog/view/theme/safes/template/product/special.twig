{{ header }}
<div class="l-container l-container_padding special">
  <div class="grid">
    {% if column_left %}
    <div class="grid__col grid__col--1-of-4">
    {{ column_left }}
    </div>
    {% endif %}
    {% if column_left and column_right %}
    {% set class = 'grid__col--2-of-4' %}
    {% elseif column_left or column_right %}
    {% set class = 'grid__col--3-of-4' %}
    {% else %}
    {% set class = 'grid__col--4-of-4' %}
    {% endif %}
    <div class="grid__col {{ class }}">
      <ul class="breadcrumbs h-center">
      {% for breadcrumb in breadcrumbs %}
      <li class="breadcrumbs__item"><a href="{{ breadcrumb.href }}" class="link link_breadcrumbs">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      </ul>
      {{ content_top }}
      <h1 class="special__title">{{ heading_title }}</h2>
      {% if products %}
      <div class="grid">
        {% for product in products %}
          <div class="grid__col grid__col--1-of-3 grid__col--m-1-of-2">
            <div class="catalog__item">
              <div class="catalog__image">
                <a href="{{ product.href }}">
                  <div class="catalog__img" style="background-image: url('{{ product.thumb }}');"></div>
                </a>
              </div>
              <h3 class="catalog__caption">
                <a href="{{ product.href }}" class="link link_discount">{{ product.name }}</a>
              </h3>
              {% if product.special %}
              <span class="catalog__price">{{ product.special }}</span>
              <span class="catalog__price catalog__price_old">{{ product.special }}</span>
              {% else %}
              <span class="catalog__price">{{ product.price }}</span>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      {% else %}
      <div class="catalog__empty">
        Сегодня нет товаров со скидкой
      </div>
      {% endif %}
      {{ content_bottom }}
    </div>
    {% if column_right %}
    <div class="grid__col grid__col--1-of-4">
    {{ column_right }}
    </div>
    {% endif %}
  </div>
</div>
{{ footer }}