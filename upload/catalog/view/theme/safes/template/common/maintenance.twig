<!doctype html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />        
        <title>{{ title }}</title>
        {% for style in styles %}
        <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
        {% endfor %}
        {% for link in links %}
        <link rel="{{ link.rel }}" href="{{ link.href }}" />
        {% endfor %}
        {% for script in scripts %}
        <script src="{{ script }}" type="text/javascript"></script>
        {% endfor %}
        <style>
            html,
            body {
                width: 100%;
                height: 100%;
                margin: 0;
                padding: 0;
            }
            body {
                background: #b9c7cb;
            }
	        .l-wrapper {
                display: flex;
                position: absolute;
                top: 0; right: 0; bottom: 0; left: 0;
            }
            .l-container {
                margin: auto;
            }
        </style>
    </head>
    <body>
        <div class="l-wrapper">
            <div class="l-container">
                <img src="catalog/view/theme/tvoiseif/image/logotype.svg" title="{{ heading_title }}" alt="Твой сейф" />
            </div>
        </div>
    </body>
</html>